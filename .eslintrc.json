{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_pool"],
        "allowAfterThis": true,
        "allowAfterSuper": true,
        "enforceInMethodNames": true
      }
    ],
    "no-console": "off",
    "linebreak-style": "off"
  }
}
